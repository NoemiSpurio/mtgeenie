<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="20240619-pre-01" author="nhy">
        <renameTable oldTableName="set" newTableName="mtg_set"/>
    </changeSet>

    <changeSet id="20240619-01" author="nhy">
        <sqlFile path="db/changelog/include/script/insert-sets.sql"/>
    </changeSet>
    
    <changeSet id="20240619-02" author="nhy">
        <createTable tableName="cost">
            <column name="id" type="varchar(255)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="black" type="integer"/>
            <column name="blue" type="integer"/>
            <column name="white" type="integer"/>
            <column name="red" type="integer"/>
            <column name="green" type="integer"/>
            <column name="generic" type="integer"/>
            <column name="colorless" type="integer"/>
            <column name="snow" type="integer"/>
            <column name="uw" type="integer"/>
            <column name="ub" type="integer"/>
            <column name="br" type="integer"/>
            <column name="rg" type="integer"/>
            <column name="wg" type="integer"/>
            <column name="bw" type="integer"/>
            <column name="ur" type="integer"/>
            <column name="bg" type="integer"/>
            <column name="colorless_w" type="integer"/>
            <column name="colorless_u" type="integer"/>
            <column name="colorless_b" type="integer"/>
            <column name="colorless_r" type="integer"/>
            <column name="colorless_g" type="integer"/>
            <column name="double_generic_w" type="integer"/>
            <column name="double_generic_u" type="integer"/>
            <column name="double_generic_b" type="integer"/>
            <column name="double_generic_r" type="integer"/>
            <column name="double_generic_g" type="integer"/>
            <column name="phyrexian_w" type="integer"/>
            <column name="phyrexian_u" type="integer"/>
            <column name="phyrexian_b" type="integer"/>
            <column name="phyrexian_r" type="integer"/>
            <column name="phyrexian_g" type="integer"/>
            <column name="phyrexian_r_g" type="integer"/>
            <column name="phyrexian_g_w" type="integer"/>
            <column name="phyrexian_r_w" type="integer"/>
            <column name="phyrexian_u_g" type="integer"/>
        </createTable>
    </changeSet>

    <changeSet id="20240619-03" author="nhy">
        <createTable tableName="card">
            <column name="id" type="varchar(255)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="number" type="varchar(255)"/>
            <column name="set_id" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="cost_id" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="set_id" baseTableName="card"
                                 constraintName="fk_card_set" deferrable="false" initiallyDeferred="false"
                                 referencedColumnNames="id" referencedTableName="mtg_set"
                                 validate="true"/>

        <addForeignKeyConstraint baseColumnNames="cost_id" baseTableName="card"
                                 constraintName="fk_card_cost" deferrable="false" initiallyDeferred="false"
                                 referencedColumnNames="id" referencedTableName="cost"
                                 validate="true"/>
    </changeSet>
    
    <changeSet id="20240619-04" author="nhy">
        <createTable tableName="type">
            <column name="id" type="varchar(255)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20240619-05" author="nhy">
        <createTable tableName="card_type">
            <column name="id" type="varchar(255)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="card_id" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="type_id" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="card_id" baseTableName="card_type"
                                 constraintName="fk_card_type_card" deferrable="false" initiallyDeferred="false"
                                 referencedColumnNames="id" referencedTableName="card"
                                 validate="true"/>

        <addForeignKeyConstraint baseColumnNames="type_id" baseTableName="card_type"
                                 constraintName="fk_card_type_type" deferrable="false" initiallyDeferred="false"
                                 referencedColumnNames="id" referencedTableName="type"
                                 validate="true"/>
    </changeSet>

</databaseChangeLog>
