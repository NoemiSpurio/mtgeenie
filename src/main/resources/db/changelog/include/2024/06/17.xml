<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">



    <changeSet id="20240617-01" author="nhy">
        <createTable tableName="set">
            <column name="id" type="varchar(255)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)" remarks="Set name"/>
            <column name="code" type="varchar(3)" remarks="Set code"/>
            <column name="symbol" type="longtext" remarks="Set symbol"/>
            <column name="type" type="varchar(255)" remarks="Set type"/>
            <column name="notes" type="varchar(255)"/>
            <column name="release_date" type="date"/>
        </createTable>
    </changeSet>

    <changeSet id="20240617-02" author="nhy">
        <dropColumn tableName="set" columnName="symbol"/>
    </changeSet>

</databaseChangeLog>
